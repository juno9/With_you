<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="250dp">


    <EditText
        android:id="@+id/내용표시텍스트뷰"
        android:layout_width="148dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/이벤트내용"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/날짜"
        android:layout_width="44dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="날짜:"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/이벤트내용" />

    <TextView
        android:id="@+id/이벤트내용"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="내용:"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/추가버튼"
        android:layout_width="72dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="추가"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/날짜"
        app:layout_constraintVertical_bias="0.137" />

    <Button
        android:id="@+id/취소버튼"
        android:layout_width="72dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/추가버튼"
        app:layout_constraintTop_toBottomOf="@+id/내용표시텍스트뷰"
        app:layout_constraintVertical_bias="0.457" />

    <TextView
        android:id="@+id/날짜표시텍스트뷰"
        android:layout_width="144dp"
        android:layout_height="37dp"
        android:ems="10"
        android:hint="날짜를 선택하세요"
        app:layout_constraintBottom_toTopOf="@+id/취소버튼"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toEndOf="@+id/날짜"
        app:layout_constraintTop_toBottomOf="@+id/내용표시텍스트뷰"
        app:layout_constraintVertical_bias="0.175" />

</androidx.constraintlayout.widget.ConstraintLayout>